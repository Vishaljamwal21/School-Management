@model IEnumerable<StudentManagementApp.Models.Student>

<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Student List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-success form-control" asp-action="SaveOrUpdate">
            <i class="fas fa-plus"></i>
            Add Student
        </a>
    </div>
</div>
<div class="container rounded border table-responsive m-2 p-2">
    <table id="tabledata" class="table table-bordered table-active table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Mobile</th>
                <th>Roll No</th>
                <th>Address</th>
                <th>Class</th>
                <th>Action Buttons</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts {
    <script src="~/js/Student.js"></script>
}
